{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranches": ["development"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor"],
      "groupName": "all minor updates",
      "groupSlug": "all-minor"
    },
    {"matchUpdateTypes": ["patch"], "automerge": true}
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^versions\\.ts$"],
      "matchStrings": [
        "(?<depName>\\w+):\\s*\\{[^\\}]*\\bversion:\\s*\"(?<currentValue>[^\"]+)\"[^\\}]*\\bdepName:\\s*\"(?<depName>[^\"]+)\"[^\\}]*\\bdatasource:\\s*\"(?<datasource>[^\"]+)\"[^\\}]*\\bversioning:\\s*\"(?<versioning>[^\"]+)\"(?:[^\\}]*\\bregistryUrl:\\s*\"(?<registryUrl>[^\"]+)\")?"
      ],
      "datasourceTemplate": "{{datasource}}",
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "{{versioning}}",
      "registryUrlTemplate": "{{#if registryUrl}}{{registryUrl}}{{/if}}"
    }
  ]
}